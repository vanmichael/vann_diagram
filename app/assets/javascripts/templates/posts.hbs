<div class="row">
  <div class="large-6 columns">
    <h2>Posts
      {{#link-to 'posts'}}
        -Back to all posts
      {{/link-to}}
    </h2>
  </div>
</div>

<div class="row">
  <div class="large-6 columns">
    {{#each}}
      <div class="post_list_item">
        {{#link-to 'posts.show' this}}
          {{title}}
        {{/link-to}}
      </div>
    {{/each}}
  </div>

  <div class="large-6 columns">
    {{outlet}}
  </div>
</div>
